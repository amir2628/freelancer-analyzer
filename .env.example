# Конфигурация приложения
APP_NAME=Freelancer Data Analyzer
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Пути к файлам
DATA_PATH=./data/freelancer_earnings_bd.csv
MODEL_CACHE_DIR=./models
LOGS_DIR=./logs

# FastAPI конфигурация
HOST=0.0.0.0
PORT=8000
RELOAD=False

# LLM конфигурация
MODEL_NAME=microsoft/DialoGPT-medium
USE_CUDA=True
MAX_LENGTH=512
TEMPERATURE=0.7

# Безопасность
SECRET_KEY=some-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# База данных
DATABASE_URL=sqlite:///./freelancer_data.db

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Мониторинг
ENABLE_METRICS=True
METRICS_PORT=9090

# Производительность
MAX_WORKERS=4
TIMEOUT=300